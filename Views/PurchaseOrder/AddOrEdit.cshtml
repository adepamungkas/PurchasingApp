@model PurchasingApp.Models.PurchaseOrderModel

@{ Layout = null; }

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.PurchaseId" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PurchaseId" />
            <input type="hidden" asp-for="DeliveryDate" />

            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="OrderyDate" class="control-label">Date</label>
                        <div class="input-group">
                            <input asp-for="OrderyDate" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="OrderyDate" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-6">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        </b><label asp-for="OrderNumber" class="control-label"></label>
                        <div class="input-group">
                            <input asp-for="OrderNumber" class="form-control form-control-sm" />
                        </div>
                        <span asp-validation-for="OrderNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <b> <label asp-for="VendorName" class="control-label"></label></b>
                        <input asp-for="VendorName" class="form-control  form-control-sm" />
                        <span asp-validation-for="VendorName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <b>
                            <label asp-for="ShippingName" class="control-label"></label>
                        </b>
                        <input asp-for="ShippingName" class="form-control form-control-sm" />
                        <span asp-validation-for="ShippingName" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="VendorContactName" class="control-label"></label>
                        <input asp-for="VendorContactName" placeholder="" class="form-control  form-control-sm" />
                        <span asp-validation-for="VendorContactName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">

                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="ShippingDept" class="control-label"></label>
                        <input asp-for="ShippingDept" placeholder="" class="form-control  form-control-sm" />
                        <span asp-validation-for="ShippingDept" class="text-danger"></span>
                    </div>
                </div>
            </div>




            <div class="row">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="VendorCompanyName" class="control-label"></label>
                        <input asp-for="VendorCompanyName" placeholder="" class="form-control  form-control-sm" />
                        <span asp-validation-for="VendorCompanyName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">

                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="ShippingCompanyName" class="control-label"></label>
                        <input asp-for="ShippingCompanyName" placeholder="" class="form-control  form-control-sm" />
                        <span asp-validation-for="ShippingCompanyName" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">

                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="VendorAddress" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <input asp-for="VendorAddress" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="VendorAddress" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">

                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="ShippingAddress" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                            </div>
                            <input asp-for="ShippingAddress" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ShippingAddress" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">

                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="VendorPhone" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-phone-square"></i>
                                </div>
                            </div>
                            <input asp-for="VendorPhone" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="VendorPhone" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">

                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="VendorPhone" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-phone-square"></i>
                                </div>
                            </div>
                            <input asp-for="VendorPhone" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="VendorPhone" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ShippingVia" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-caravan"></i>
                                </div>
                            </div>
                            <input asp-for="ShippingVia" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ShippingVia" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ShippingMethod" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-caravan"></i>
                                </div>
                            </div>
                            <input asp-for="ShippingMethod" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ShippingMethod" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ShippingTerm" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-book"></i>
                                </div>
                            </div>
                            <input asp-for="ShippingTerm" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ShippingTerm" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="DeliveryDate" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="far fa-calendar-alt"></i>
                                </div>
                            </div>
                            <input asp-for="DeliveryDate" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="DeliveryDate" class="text-danger"></span>
                    </div>
                </div>
            </div>




            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ProductCode" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-barcode"></i>
                                </div>
                            </div>
                            <input asp-for="ProductCode" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ProductCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fab fa-product-hunt"></i>
                                </div>
                            </div>
                            <input asp-for="ProductName" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="QtyOrder" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-calculator"></i>
                                </div>
                            </div>
                            <input asp-for="QtyOrder" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="QtyOrder" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="UnitPrice" class="control-label"></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <div class="input-group-text">
                                    <i class="fas fa-dollar-sign"></i>

                                </div>
                            </div>
                            <input asp-for="UnitPrice" class="form-control  form-control-sm" />
                        </div>
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>
            </div>



            <div class="row">
                <div class="col-md-5">
                </div>

                <div class="col-md-2">
                </div>

                <div class="col-md-5">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn-sm btn btn-primary float-right" />
                    </div>
                </div>
            </div>

        </form>
    </div>

</div>

